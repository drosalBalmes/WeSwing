<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    tools:context=".fragments.MogudesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nomMoguda"
                android:text="FESTA INICI TRIMESTRE"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@color/white" />
            <TextView
                android:id="@+id/tipusMoguda"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:text="ALTRES - LINDY HOP"
                android:textSize="20dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="40dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/dataMoguda"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:text="9/11/2002-9/11/20024  "
                android:textSize="18dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="40dp"
                android:background="@color/white"  />
            <Switch
                android:id="@+id/asistencia"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:textSize="25sp"
                android:text="Hi assistiré"/>

            <TextView
                android:text="Organizador i localització"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:background="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                />

            <TextView
                android:text="Descripció"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/descriptionText"
                android:text="@string/sample_text"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:background="@color/white"
                />
            <Button
                android:id="@+id/asistentsButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Asistents"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                />
            <TextView
                android:text="Fotografies"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:background="@color/white" />
            <TextView
                android:text="No hi han fotos"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:background="@color/white"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>